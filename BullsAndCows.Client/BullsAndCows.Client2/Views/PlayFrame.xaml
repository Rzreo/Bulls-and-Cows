<UserControl x:Class="BullsAndCows.Client.Views.PlayFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BullsAndCows.Client.Views"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:infra="clr-namespace:BullsAndCows.Infrastructure.Utils.Regions;assembly=BullsAndCows.Infrastructure.Utils"             
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0" prism:RegionManager.RegionName="{x:Static infra:ClientRegions.Play_PlayRegion}"/>
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="{x:Static infra:ClientRegions.Play_InputRegion}"/>
    </Grid>
</UserControl>
