<UserControl x:Class="BullsAndCows.Client.Views.LobbyFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BullsAndCows.Client.Views"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:infra="clr-namespace:BullsAndCows.Infrastructure.Utils.Regions;assembly=BullsAndCows.Infrastructure.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ContentControl Grid.Column="0" prism:RegionManager.RegionName="{x:Static infra:ClientRegions.Lobby_PART1}"/>
        <ContentControl Grid.Column="1" prism:RegionManager.RegionName="{x:Static infra:ClientRegions.Lobby_PART2}"/>
    </Grid>
</UserControl>
