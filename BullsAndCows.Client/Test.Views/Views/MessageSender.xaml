<UserControl x:Class="Test.Views.Views.MessageSender"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Test.Views.Views" HorizontalAlignment="Stretch"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <TextBox Text="{Binding CurrentMessage, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
        <Button Content="Send" Command="{Binding SendMessageCommand}"/>
    </StackPanel>
</UserControl>
