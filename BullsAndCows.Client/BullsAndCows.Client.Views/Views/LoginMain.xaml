<UserControl x:Class="BullsAndCows.Client.Views.Views.LoginMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BullsAndCows.Client.Views.Views"
             xmlns:vm="clr-namespace:BullsAndCows.Client.Views.ViewModels"
             xmlns:types="clr-namespace:BullsAndCows.Infrastructure.Datas;assembly=BullsAndCows.Infrastructure"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ListBox ItemsSource="{Binding RoomLists}">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type types:BAS_ROOM_DATA}">
                    <Button Command="{Binding CreateRoomCommand}">
                        <TextBlock Text="{Binding id}"/>
                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1">
            <Button Content="Create Room" Command="{Binding CreateRoomCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
